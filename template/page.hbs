<style type="text/css">
    html,
    body {
        font-family: Cambria, Cochin, Georgia, Times, "Times New Roman", serif;
    }

    hr.new {
        border: 1px solid #037a35;
    }

    .center12 {
        width: 1000px;
        margin-left: auto;
        margin-right: auto;
        height: auto;
        padding: 60px;
    }

    hr.add {
        background-color: rgb(0, 0, 0);
        width: 100%;
        height: 1px;
        border-top: 1px solid black;
    }

    .column {
        padding: 10px;
        width: 50%;
        float: left;
        height: auto;
        /* Should be removed. Only for demonstration */
    }

    .left {
        width: 65%;
        float: left;
    }

    .right {
        width: 35%;
        float: left;
    }

    .row:after {
        content: "";
        display: table;
        clear: both;
    }

    table,
    th,
    td {
        border: 2px solid black;
        border-collapse: collapse;
    }

    th,
    td {
        padding: 15px;
    }
</style>


<html>

<body>

    <div id="content" class="center12">

        <h2>Your Payment Recipt</h2>

        <h4 style="position: right;">{{meta.date}}</h4>
        <h4 style="position: right;">{{meta.time}}</h4>

        <hr class="new" />

        <h1>{{Vendor.name}}</h1>
        <h2>{{Vendor.siteName}}</h2>
        <h5>Vendor ID: {{Vendor.id}}</h5>
        <h5>Address: {{Vendor.address}}</h5>
        <h5>Contact Number: {{Vendor.number}}</h5>
        <hr class="new" />
        <br />
        <!-- <p id="date"></p>
      <p id="time"></p> -->
        <div class="row">
            <div class="column">
                <h4>Customer Information:</h4>
                <h5>Firstname: {{customer.firstname}} </h5>
                <h5>Lastname: {{customer.lastname}}</h5>
                <h5>Address: {{customer.address}} </h5>

            </div>
        </div>
        <hr class="new" />
        <br />

        <div id="dia">
            <h4>Bill ID: {{bill.BillId}}</h4>
            <h4>Delivery Date: {{bill.DeliveryDate}}</h4>
        </div>
        <br />

        <div id="med">
            <h4>Your Cart:</h4>
            <table class="thb" style="width:80%; margin-top: 13px;" align="center">
                <tr>
                    <th>Item Name</th>
                    <th>Price/Unit</th>
                    <th>Qunatity</th>
                    <th>Total Cost</th>
                </tr>
                <!-- <tr>
            <td>Jill</td>
            <td>Smith</td>
            <td>50</td>
          </tr> -->
                {{#each list}}
                <tr>
                    <td>{{name}}</td>
                    <td>{{priceUnit}}</td>
                    <td>{{qunatity}}</td>
                    <td>{{totalP}}</td>
                </tr>
                {{/each}}
            </table>
        </div>
        <br />


        <br />
        <br />

    </div>

</html>